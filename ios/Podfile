# Uncomment the next line to define a global platform for your project
platform :ios, '15.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

# NOTE: BroadcastUploadExtension target removed to avoid build conflicts.
# The screen sharing extension will be added manually in Xcode with proper
# framework linking from the main app's Pods. See IOS_SCREEN_SHARING_COMPLETED.md

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      # Ensure modular headers are enabled for Agora and other plugins
      config.build_settings['DEFINES_MODULE'] = 'YES'
      config.build_settings['MODULE_NAME'] = target.name
    end

    # ---- permission_handler config ----
    # Enable the permissions required by your app
    # See: https://pub.dev/packages/permission_handler
    if target.name == 'permission_handler_apple'
      target.build_configurations.each do |config|
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= [
          '$(inherited)',
          'PERMISSION_CAMERA=1',
          'PERMISSION_MICROPHONE=1',
          'PERMISSION_PHOTOS=1',
          'PERMISSION_CONTACTS=1',
          'PERMISSION_NOTIFICATIONS=1',
          'PERMISSION_LOCATION=0',
          'PERMISSION_BLUETOOTH=1',
          'PERMISSION_SPEECH_RECOGNIZER=1',
        ]
      end
    end
  end

  # Disable explicit module build for all targets to fix TweetNacl/CTweetNacl issue
  installer.pods_project.build_configurations.each do |config|
    config.build_settings['SWIFT_ENABLE_EXPLICIT_MODULES'] = 'NO'
  end

  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['SWIFT_ENABLE_EXPLICIT_MODULES'] = 'NO'
      # Ensure Agora RTC module is properly exposed
      if target.name.include?('agora_rtc_engine') || target.name.include?('AgoraRtcEngine')
        config.build_settings['DEFINES_MODULE'] = 'YES'
        config.build_settings['MODULE_NAME'] = target.name
      end
      
      # Disable dSYM generation for third-party frameworks that don't provide them
      # This prevents App Store Connect warnings about missing dSYMs
      agora_frameworks = ['AgoraRtcEngine', 'agora_rtc_engine', 'AgoraInfra', 'AgoraIrisRTC', 'iris_method_channel']
      webrtc_frameworks = ['WebRTC-SDK', 'flutter_webrtc']
      if agora_frameworks.any? { |f| target.name.include?(f) } || webrtc_frameworks.any? { |f| target.name.include?(f) }
        config.build_settings['DEBUG_INFORMATION_FORMAT'] = 'dwarf'
        config.build_settings['STRIP_INSTALLED_PRODUCT'] = 'YES'
      end
    end
  end
end
